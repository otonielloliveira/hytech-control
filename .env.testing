APP_NAME="Hytech Control Testing"
APP_ENV=testing
APP_KEY=base64:TEST_KEY_SHOULD_BE_GENERATED
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Database para testes - SQLite em memória
DB_CONNECTION=sqlite_testing
DB_DATABASE=:memory:

# Cache para testes
CACHE_STORE=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# Mail para testes
MAIL_MAILER=array

# Logs para testes
LOG_CHANNEL=testing

# Desabilitar serviços desnecessários em testes
TELESCOPE_ENABLED=false
PULSE_ENABLED=false

# Performance para testes
BCRYPT_ROUNDS=4