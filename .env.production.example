# Configuração de Produção - Locaweb
# Copie este arquivo para .env no servidor e ajuste os valores

APP_NAME="HyTech Control"
APP_ENV=production
APP_KEY=base64:GERE_COM_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=America/Sao_Paulo
APP_URL=https://seu-dominio.com.br
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR

# Logging
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=seu_banco_producao
DB_USERNAME=seu_usuario_mysql
DB_PASSWORD=sua_senha_mysql

# Broadcasting (se usar)
BROADCAST_CONNECTION=log

# Cache
CACHE_STORE=file
FILESYSTEM_DISK=public

# Queue
QUEUE_CONNECTION=database

# Session
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Filament
FILAMENT_PATH=admin

# Mail (Locaweb SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.seu-dominio.com.br
MAIL_PORT=587
MAIL_USERNAME=contato@seu-dominio.com.br
MAIL_PASSWORD=senha-email-locaweb
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="contato@seu-dominio.com.br"
MAIL_FROM_NAME="${APP_NAME}"

# Asaas (Pagamentos - se usar)
ASAAS_API_KEY=sua_chave_producao_asaas
ASAAS_ENVIRONMENT=production
ASAAS_SANDBOX=false

# PIX (se usar)
PIX_ENABLED=true

# Mercado Pago (se usar)
MERCADOPAGO_ACCESS_TOKEN=seu_token_producao
MERCADOPAGO_PUBLIC_KEY=sua_chave_publica

# PagSeguro (se usar)
PAGSEGURO_EMAIL=seu_email
PAGSEGURO_TOKEN=seu_token_producao
PAGSEGURO_ENVIRONMENT=production

# AWS S3 (se usar para storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (se usar websockets)
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# Vite (para assets em produção)
VITE_APP_NAME="${APP_NAME}"

# Telescope (desabilitar em produção)
TELESCOPE_ENABLED=false

# Outras configurações
MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
